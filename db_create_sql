CREATE TABLE TOTAL_TRANSACTION_AMOUNT_PER_PAYMENT_METHOD (
    PAYMENT_METHOD VARCHAR(50) PRIMARY KEY,
    TOTAL_AMOUNT DECIMAL(10,2) NOT NULL
);

CREATE TABLE COUNT_NUMB_BUY_PER_PRODUCT (
    PRODUCT_ID VARCHAR(100) PRIMARY KEY,
    TOTAL_QUANTITY INT NOT NULL
);

CREATE TABLE TOTAL_SPENT_PER_USER_TRANSACTION_TYPE (
    USER_TRANSACTION_KEY VARCHAR(255) PRIMARY KEY,
    TOTAL_SPENT DECIMAL(12, 2) NOT NULL
);

CREATE TABLE TRANSACTION_STATUS_EVOLUTION (
    TRANSACTION_ID VARCHAR(100) PRIMARY KEY,
    LATEST_STATUS VARCHAR(50)
);

CREATE TABLE AMOUNT_PER_TYPE_WINDOWED (
    TRANSACTION_TYPE VARCHAR(50),
    WINDOW_START DATETIME,
    WINDOW_END DATETIME,
    TOTAL_AMOUNT DECIMAL(12, 2) NOT NULL,
    PRIMARY KEY (TRANSACTION_TYPE, WINDOW_START, WINDOW_END)
);